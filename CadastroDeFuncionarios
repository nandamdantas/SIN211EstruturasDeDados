#include <stdio.h>
#include <stdlib.h>

typedef struct sDataDeNascimento{
	int diaDeNascimento;
	int mesDeNascimento;
	int anoDeNascimento;
}DataDeNascimento;

typedef struct sFuncionario{
	char nome[30];
    DataDeNascimento nascimento;
	float salario;
}Funcionario;

void preencherDados(Funcionario *p){
	printf("Nome do funcionário:" );
	scanf("%s", p->nome);
	printf("Data de nascimento do funcionario. \nDia:");
	scanf("%d", (p->nascimento)->diaDeNascimento);
	printf("\nMês:");
	scanf("%d", (p->nascimento)->mesDeNascimento);
	printf("\nAno:");
	scanf("%d", (p->nascimento)->anoDeNascimento);
	printf("\nSalario do funcionario: ");
	scanf("%f", p->salario);
};

void imprimirDados(Funcionario *p){
	printf("Nome do Funcionario: %s", p.nome);
	printf("\nData de Nascimento: %d/%d/%d", p.nascimento.diaDeNascimento, p.nascimento.mesDeNascimento, p.nascimento.anoDeNascimento);
	printf("\nSalario do Funcionario: 0.2%f", p.salario);
};
